    <style name="TextViewItemTable" parent="TextViewMain">
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/background_table_item_black</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/table_item_min_width</item>
        <item name="android:minHeight">@dimen/table_item_min_height</item>
    </style>

</resources>
